<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PIM4App.ViewModels"
             x:DataType="vm:LoginViewModel"
             x:Class="PIM4App.Views.LoginPage"
             Title="Login - PIM 4">

    <VerticalStackLayout Padding="30" Spacing="10" VerticalOptions="Center">

        <Label Text="Sistema de Chamados" FontSize="24" HorizontalOptions="Center" />
        <Label Text="Acesso ao App Mobile" FontSize="16" HorizontalOptions="Center" Margin="0,0,0,20" />

        <Entry Placeholder="UsuÃ¡rio (use: aluno)" 
               Text="{Binding Username}" />

        <Entry Placeholder="Senha (use: 12345)" 
               Text="{Binding Password}" 
               IsPassword="True" />

        <Button Text="Entrar" 
                Command="{Binding LoginCommand}" 
                Margin="0,20,0,0" />

    </VerticalStackLayout>

</ContentPage>