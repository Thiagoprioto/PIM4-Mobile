<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PIM4App.ViewModels"
             x:DataType="vm:DetalheChamadoViewModel"
             x:Class="PIM4App.Views.DetalheChamadoPage"
             Title="Detalhes do Chamado">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="{Binding Chamado.Titulo}" 
                   FontSize="24" 
                   FontAttributes="Bold" />

            <Frame Padding="10" CornerRadius="8" BorderColor="LightGray">
                <Grid ColumnDefinitions="Auto, *" 
                      RowDefinitions="Auto, Auto"
                      ColumnSpacing="10"
                      RowSpacing="5">

                    <Label Grid.Row="0" Grid.Column="0" Text="Categoria:" FontAttributes="Bold" />
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Chamado.IdCategoria, StringFormat='ID Categoria: {0}'}" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Status:" FontAttributes="Bold" />
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Chamado.IdStatus, StringFormat='ID Status: {0}'}" />

                </Grid>
            </Frame>

            <Label Text="Descrição do Problema:" 
                   FontAttributes="Bold" 
                   Margin="0,15,0,0" />
            <Label Text="{Binding Chamado.Descricao}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>